{% trans_default_domain 'FOSUserBundle' %}

<div class="grid-x login-page">
    <div class="cell small-4 medium-3 large-6 login-img-container">
        <img class="login-hex" src="{{ asset('assets/img/hexagon.svg') }}">        
        <img class="excl-mark" src="{{ asset('assets/img/excl-mark.png') }}">
    </div>
    <div class="cell small-8 medium-9 large-6">

        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_widget(form) }}
        <div class="form-submit-wrapper">
            <label for="submit">
                <i class="fas fa-arrow-right fa-2x orange form-submit-arrow"></i>
            <input class="bebas orange form-submit" type="submit" id="submit" value="{{ 'registration.submit'|trans }}" />
            </label>
        </div>
        {{ form_end(form) }}

    </div>
</div>

<script>

    $(document).ready(function() {
        
        $("label").addClass('form-label');
        $("input").addClass('form-input');
        $(".form-submit").removeClass('form-input');

    });

</script>