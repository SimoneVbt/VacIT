{% trans_default_domain 'FOSUserBundle' %}

<div class="grid-x login-page">
    <div class="cell small-4 medium-3 large-6 login-img-container">
        <img class="login-hex" src="{{ asset('assets/img/hexagon.svg') }}">        
        <img class="excl-mark" src="{{ asset('assets/img/excl-mark.png') }}">
    </div>
    <div class="cell small-8 medium-9 large-6">

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="orange login-title">Login</h1>

        <form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <label class="login-label" for="username">{{ 'security.login.username'|trans }}
                <input class="login-input login-username" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
            </label>

            <label class="login-label" for="password">{{ 'security.login.password'|trans }}
                <input class="login-input login-password" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
            </label>

            <div class="grid-x">
                <div class="cell small-6">
                    <a class="login-reset" href="{{ path('fos_user_resetting_request') }}">Wachtwoord vergeten</a>
                </div>
                <div class="cell small-6 submit-icon">
                    <label for="_submit">
                        <i class="fas fa-arrow-right fa-2x orange login-submit"></i>
                    </label>
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
            </div>

        </form>

    
    </div>
</div>

<script>

    $(document).ready( function() {

        $(".submit-icon").keyup(e => {
            if (e.key == "Enter") {
                $(".submit-icon").click();
            }
        });

    });

</script>