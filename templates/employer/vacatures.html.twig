{% extends 'base.html.twig' %}

{% block title %} :: Mijn Vacatures{% endblock %}


{% block body %}

<div class="grid-x">
    <div class="cell medium-3 show-for-medium photo-container">
        {% if user.afbeelding == "default" %}
        <img class="photo" src="{{ asset('assets/img/users/defaultbedrijf.png') }}">
        {% else %}
        <img class="photo" src="{{ asset('assets/img/users/') ~ user.afbeelding }}">
        {% endif %}
    </div>
    <div class="cell small-12 medium-9">
        <h1 class="overview-title">Vacatures bij <span class="orange">{{ user.naam }}</span></h1>

        {% if user.vacatures is empty %}

        <p>Uw bedrijf heeft nog geen vacatures uitstaan.</p>

        {% else %}

        <table id="tabel-vacatures-werkgever" class="tables-layout">
            <thead>
                <th>Datum</th>
                <th>Vacature</th>
                <th class="sollicitanten">Sollicitanten</th>
            </thead>
            <tbody>
            {% for vacature in user.vacatures %}
                <tr>
                    <td>{{ vacature.plaatsingsdatum|date("d-m-Y") }}</td>
                    <td><a href="{{ path('vacature_detail', { 'id': vacature.id }) }}">
                        {{ vacature.vacaturetitel }}</a></td>
                    <td class="sollicitanten"><a href="{{ path('sollicitaties_werkgever', { 'user_id': app.user.id, 'vacature_id': vacature.id }) }}">
                        {{ vacature.sollicitaties|length }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% endif %}

        <div class="button-container voeg-vacatures-toe">
            <a class="button-small" href="">Voeg vacatures toe</a>
        </div>
        {% if user.vacatures is not empty %}
        <div class="button-container">
            <a class="button-small" href="{{ path('alle_sollicitaties_werkgever', { 'id': app.user.id}) }}">Bekijk alle sollicitaties</a>
        </div>
        {% endif %}

    </div>
</div>

<script>

    $(document).ready( function() {

        $('#tabel-vacatures-werkgever').DataTable({
            dom: 'rtip',
            pagingType: "numbers",
            pageLength: 10,
            language: {"info": "Vacatures _START_ t/m _END_ (uit _TOTAL_ vacatures)" },
            "fnDrawCallback": function(oSettings) {
                if (oSettings._iDisplayLength > oSettings.fnRecordsDisplay()) {
                    $(oSettings.nTableWrapper).find('.dataTables_paginate').hide();
                    $(oSettings.nTableWrapper).find('.dataTables_info').hide();    
                }
            },
        });
        
    });

</script>
{% endblock %}