{% extends 'base.html.twig' %}

{% block title %} :: Sollicitaties{% endblock %}


{% block body %}

<div class="grid-x">
    <div class="cell medium-3 show-for-medium photo-container">
        {% if user.afbeelding == "default" %}
        <img class="photo" src="{{ asset('assets/img/users/defaultbedrijf.png') }}">
        {% else %}
        <img class="photo" src="{{ asset('assets/img/users/') ~ user.afbeelding }}">
        {% endif %}
    </div>
    <div class="cell small-12 medium-9">
        <h1 class="overview-title">Sollicitaties naar <br class="hide-for-medium">
             <a href="{{ path('vacature_detail', { 'id': vacature.id }) }}">{{ vacature.vacaturetitel }}</a></h1>
        <p>Plaatsingsdatum: {{ vacature.plaatsingsdatum|date("d-m-Y") }}</p>
        {% if vacature.sollicitaties is empty %}

        <p>Er heeft nog niemand gesolliciteerd op deze vacature.</p>

        {% else %}

        <table id="tabel-sollicitaties-vacature" class="tables-layout">
            <thead>
                <th>Datum</th>
                <th>Sollicitant</th>
                <th class="uitnodiging-werkgever">Uitnodiging</th>
            </thead>
            <tbody>
            {% for sollicitatie in vacature.sollicitaties %}
                 <tr>
                     <td>{{ sollicitatie.datum|date("d-m-Y") }}</td>
                     <td><a href="">{{ sollicitatie.user.voornaam }} {{ sollicitatie.user.naam }}</a></td>
                     <td class="uitnodiging-werkgever" style="font-size: 2rem;">

                         {% if sollicitatie.uitnodiging == NULL %}
                         <i class="fas fa-check orange" data-value="1"></i> /
                         <i class="fas fa-times orange" data-value="2"></i>
                         {% endif %}

                         {% if sollicitatie.uitnodiging matches '/1/' %}
                         <i class="fas fa-check"></i>
                         <i class="far fa-times-circle fa-sm orange undo-inv" data-value="NULL"></i>
                         {% endif %}

                         {% if sollicitatie.uitnodiging matches '/2/' %}
                         <i class="fas fa-times"></i>
                         <i class="far fa-times-circle fa-sm orange undo-inv" data-value="NULL"></i>
                         {% endif %}
                         
                     </td>
                 </tr>   
            {% endfor %}
            </tbody>
        </table>

        {% endif %}

    </div>
</div>

